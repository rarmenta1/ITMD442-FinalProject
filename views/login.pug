extends layout

block content
  #heading 
    h1 Login 
  #login  
    form(action="/login/password", method="POST")
      section 
        label(for="email") Email 
        input(type="email", name="email")
      section 
        label(for="password") Password  
        input(type="password", name="password")
      button(type="submit" ) Sign In 
      a(href="/signup") Sign Up




